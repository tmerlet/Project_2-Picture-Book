%h1 Listing tags

.index
  %table
    %tr
      %th Name
      %th
      %th
      %th

    - @tags.each do |tag|
      %tr
        %td= link_to tag.name, tag
        / %td= link_to 'Edit', edit_tag_path(tag)
        %td= link_to 'Destroy', tag, :method => :delete, :data => { :confirm => 'Are you sure?' } if can? :destroy, tag

  = paginate @tags
  / = link_to 'New Tag', new_tag_path
  %br
