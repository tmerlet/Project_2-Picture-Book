#album_text
  %li Listing albums

.index
  %table
    %tr
      %th User
      %th Name
      %th Description
      %th
      %th
      %th
    - @albums.each do |album|
      %tr
      %td= album.user_id
      / show which user the album belongs to
      / would be good to link this to the user_show page
      %td= link_to album.name, album
      %td= album.description
      %td= link_to 'Upload Photos', new_album_photo_path(album)
      %td= link_to 'Edit', edit_album_path(album) if album.user_id == current_user.id
      %td= link_to 'Destroy' if can? :destroy, album || album.user_id == current_user.id, :method => :delete, :data => { :confirm => 'Are you sure?' }

= paginate @albums

/ = link_to 'New Album', new_album_path
