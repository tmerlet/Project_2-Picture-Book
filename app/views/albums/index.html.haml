#album_text
  %h1 Current Albums

.index
  %table
    %tr
      %th User
      %th Album 
      %th Description
      %th
      %th
      %th
    - @albums.each do |album|
      %tr
      %td= album.user.name
      / show which user the album belongs to
      / would be good to link this to the user_show page
      %td= link_to album.name, album
      %td= album.description
      %td= link_to 'Upload Photos', new_album_photo_path(album) if can? :edit, album
      %td= link_to 'Edit', edit_album_path(album) if can? :edit, album
      %td= link_to 'Destroy', album, :method => :delete, :confirm => 'Are you sure?' if can? :destroy, album

= paginate @albums

/ = link_to 'New Album', new_album_path
