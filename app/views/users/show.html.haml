%p#notice= notice

.index
  %h1= @user.name
  %p
    %b Date of Birth:
    = @user.dob
  %p
    = image_tag @user.profile_image.medium.url
  %p
    %b Albums:
    - @albums.each do |album|
      - if album.user_id == @user.id
        %li= link_to album.name, album

  %table
    %tr
      %th Comment
      %th Photo ID
      %th Photo


    %tr
      %td= @comment.content
      %td= @comment.photo_id
      %td= @photo.image

  = link_to 'Edit', edit_user_registration_path
  / can only edit the current user who is logged in
  = link_to 'Back', users_path

  = link_to 'New Album', new_album_path